{
    "version": 2,
    "builds": [
        {
            "src": "src/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "src/server.js"
        },
        {
            "src": "/health",
            "dest": "src/server.js"
        }
    ],
    "env": {
        "MONGODB_URI": "@mongodb_connection_string",
        "JWT_SECRET": "@jwt_secret",
        "NODE_ENV": "production"
    }
}